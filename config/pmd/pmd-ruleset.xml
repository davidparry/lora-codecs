<?xml version="1.0"?>
<ruleset name="firstaware"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

<description>
        The category/java we want to use in pmd. For a detailed description of pmd category/java: http://pmd.sourceforge.net/rules/index.html
    </description>


    <evalRule ref="category/java/basic.xml/CollapsibleIfStatements">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/DoubleCheckedLocking">						<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/EmptyCatchBlock">							<priority>1</priority></evalRule>
    <evalRule ref="category/java/basic.xml/EmptyFinallyBlock">							<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/EmptyIfStmt">								<priority>1</priority></evalRule>
    <evalRule ref="category/java/basic.xml/EmptyStatementNotInLoop">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/EmptyStaticInitializer">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/EmptySwitchStatements">						<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/EmptySynchronizedBlock">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/EmptyTryBlock">								<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/EmptyWhileStmt">							<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/ForLoopShouldBeWhileLoop">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/JumbledIncrementer">						<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/OverrideBothEqualsAndHashcode">				<priority>1</priority></evalRule>
    <evalRule ref="category/java/basic.xml/ReturnFromFinallyBlock">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/UnconditionalIfStatement">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/UnnecessaryConversionTemporary">			<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/UnnecessaryFinalModifier">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/UnnecessaryReturn">							<priority>5</priority></evalRule>
    <evalRule ref="category/java/basic.xml/UselessOverridingMethod">					<priority>5</priority></evalRule>

    <evalRule ref="category/java/clone.xml/CloneMethodMustImplementCloneable">			<priority>1</priority></evalRule>
    <evalRule ref="category/java/clone.xml/CloneThrowsCloneNotSupportedException">		<priority>5</priority></evalRule>
    <evalRule ref="category/java/clone.xml/ProperCloneImplementation">					<priority>5</priority></evalRule>

    <evalRule ref="category/java/codesize.xml/CyclomaticComplexity">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/codesize.xml/ExcessiveClassLength">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/codesize.xml/ExcessiveMethodLength">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/codesize.xml/ExcessiveParameterList">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/codesize.xml/ExcessivePublicCount">					<priority>5</priority></evalRule>
    <evalRule ref="category/java/codesize.xml/TooManyFields">							<priority>5</priority></evalRule>


</ruleset>
